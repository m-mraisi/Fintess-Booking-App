<main id="signupPage">
    <div class="signupContainer">
    <h1>SIGNUP</h1>
    <form action="/signup" method="POST">
        {{#if msg}}
        <p class={{msg_class}}>{{msg}}</p>
        {{/if}}
        <input class="log-input" type="text" name="name" id="name" placeholder="Enter User name" required>
        <input class="log-input" type="email" name="email" id="email" placeholder="Enter email address" required>
        <input class="log-input" type="password" name="password" id="password" placeholder="Enter password" minlength="6" required>
            <button class="flt-btn" type="submit">CREATE ACCOUNT</button> 
    </form>
    </div>
</main>
